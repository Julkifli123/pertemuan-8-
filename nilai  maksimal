#membuat fungsi
def max ( angka1,angka2,angka3):
#memntukan kondisi jika angaka 1 lebih besar dari angka 2 dan 3
    if((angka1 > angka2 ) and (angka1 > angka3)):
#memanggil angka 1
        return angka1
#menentukan kondisi jika angka 2 lebih besar dari angka 1 dan 3
    elif((angka2 > angka1)and (angka2 > angka3)):
#memanggil angka 2
        return angka2
#jika kondisi tersebut tidak terpenuhi maka panggil angka 3
    else:
        return angka3
#menginput angka menggunakan keyboard 
a= int(input("masukkan angka1: "))
b= int(input("masukkan angka2: "))
c= int(input("masukkan angka3: "))
#hasil
cek_max= max(a,b,c)
print ("nilai maksimal adalah: ",cek_max)
